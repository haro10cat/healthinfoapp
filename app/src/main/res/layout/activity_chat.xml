<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:background="@color/lightmint">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:onClick="ClickBacktoHome"
                android:src="@drawable/ic_back"
                app:tint="@color/primary_text" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="HEALTH INFO"
                android:textAlignment="center"
                android:textColor="@color/primary_text"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_darkmode"
                app:tint="@color/primary_text" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Silahkan ajukan pertanyaan Anda"
            android:textColor="@color/primary_text"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="top"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:text="Balasan dari pertanyaan dapat ditunggu dalam 1x24 jam"
            android:textColor="@color/primary_text"
            android:textSize="14sp"
            android:textStyle="italic"/>


        <TextView
            android:id="@+id/nama"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Nama"
            android:gravity="center_vertical"
            android:layout_marginTop="25dp"
            android:paddingStart="20dp"
            android:textSize="20dp"
            android:textColor="@color/primary_text"
            />

        <EditText
            android:id="@+id/edt_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:background="@drawable/style_edt"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="3dp"
            android:hint="Nama Anda"
            android:textColor="@color/primary_text"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Email"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:textColor="@color/primary_text"/>

        <EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:background="@drawable/style_edt"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="3dp"
            android:hint="Email Anda"
            android:textColor="@color/primary_text"/>

        <TextView
            android:id="@+id/pertanyaan"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Pertanyaan"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/primary_text"/>

        <EditText
            android:id="@+id/edt_pertanyaan"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:gravity="left"
            android:background="@drawable/style_edt"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="3dp"
            android:hint="Pertanyaan Anda"
            android:textColor="@color/primary_text"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_kirim"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/style_button"
            android:text="Kirim"
            android:textColor="@color/white"
            android:textSize="20sp"/>

    </LinearLayout>



</androidx.drawerlayout.widget.DrawerLayout>